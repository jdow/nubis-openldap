{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "OpenLDAP  master Server",
  "Parameters": {
    "BucketName": {
      "Description": "Name of the S3 bucket",
      "Type": "String"
    },
    "ServiceName": {
      "Description": "Name of the service",
      "Type": "String"
    },
    "Environment": {
      "Description": "Environment we are deploying into",
      "Default": "sandbox",
      "Type": "String",
      "AllowedValues": [
        "prod",
        "stage",
        "sandbox"
      ],
      "ConstraintDescription": "Must specify prod, stage, or sandbox."
    },
    "SSHKeyName": {
      "Description": "Existing ssh key to deploy to EC2 instances",
      "Type": "String"
    },
    "TechnicalOwner": {
      "Description": "A valid LDAP email",
      "Type": "String"
    },
    "AmiId": {
      "Description": "The id of the ami for this region",
      "Type": "String"
    },
    "StacksVersion": {
      "Description": "Version of the Nubis Stacks",
      "Type": "String",
      "Default": "v1.0.0"
    },
    "ReservedEniAZ1": {
      "Description": "Reserved ENI IP for AZ1",
      "Type": "String",
      "Default": ""
    },
    "ReservedEniAZ2": {
      "Description": "Reserved ENI IP for AZ2",
      "Type": "String",
      "Default": ""
    },
    "ReservedEniAZ3": {
      "Description": "Reserved ENI IP for AZ3",
      "Type": "String",
      "Default": ""
    }
  },
  "Mappings": {
    "InstanceTypeMap": {
      "prod": {
        "InstanceType": "m3.medium"
      },
      "stage": {
        "InstanceType": "m3.medium"
      },
      "sandbox": {
        "InstanceType": "t2.small"
      }
    }
  },
  "Conditions": {
    "NotSet_ReservedEniAZ1": {
      "Fn::Equals": [
        {
          "Ref": "ReservedEniAZ1"
        },
        ""
      ]
    },
    "NotSet_ReservedEniAZ2": {
      "Fn::Equals": [
        {
          "Ref": "ReservedEniAZ2"
        },
        ""
      ]
    },
    "NotSet_ReservedEniAZ3": {
      "Fn::Equals": [
        {
          "Ref": "ReservedEniAZ3"
        },
        ""
      ]
    }
  },
  "Resources": {
    "EC2Stack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": { "Fn::Join": [ "/", [ "https://s3.amazonaws.com/nubis-stacks", { "Ref": "StacksVersion" }, "ec2.template" ] ] },
        "TimeoutInMinutes": "60",
        "Parameters": {
          "StackName": {
            "Ref": "AWS::StackName"
          },
          "ServiceName": {
            "Ref": "ServiceName"
          },
          "TechnicalOwner": {
            "Ref": "TechnicalOwner"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "AmiId": {
            "Ref": "AmiId"
          },
          "SSHKeyName": {
            "Ref": "SSHKeyName"
          },
          "IamRole":{
            "Ref": "IamEniRole"
          },
          "InstanceType": {
            "Fn::FindInMap": [
              "InstanceTypeMap",
              {
                "Ref": "Environment"
              },
              "InstanceType"
            ]
          }
        }
      }
    },
    "VpcInfo": {
      "Type": "Custom::VpcInfo",
      "Properties": {
        "ServiceToken": {
          "Fn::Join": [
            "",
            [
              "arn:aws:lambda:",
              {
                "Ref": "AWS::Region"
              },
              ":",
              {
                "Ref": "AWS::AccountId"
              },
              ":function:",
              "LookupNestedStackOutputs"
            ]
          ]
        },
        "StackName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::Region"
              },
              "vpc"
            ]
          ]
        },
        "SearchString": {
          "Ref": "Environment"
        }
      }
    },
    "EniAZ1": {
      "Type": "AWS::EC2::NetworkInterface",
      "Properties": {
        "Description": "ENI for AZ1",
        "PrivateIpAddress": {
          "Fn::If": [
            "NotSet_ReservedEniAZ1",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "Ref": "ReservedEniAZ1"
            }
          ]
        },
        "SubnetId": {
          "Fn::GetAtt": [
            "VpcInfo",
            "PrivateSubnetAZ1"
          ]
        },
        "Tags": [
          {
            "Key": "StackName",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Description",
            "Value": "ENI AZ1"
          },
          {
            "Key": "Subnet ID",
            "Value": { "Fn::GetAtt": [ "VpcInfo", "PrivateSubnetAZ1" ] }
          }
        ]
      }
    },
    "EniAZ2": {
      "Type": "AWS::EC2::NetworkInterface",
      "Properties": {
        "Description": "ENI for AZ2",
        "PrivateIpAddress": {
          "Fn::If": [
            "NotSet_ReservedEniAZ2",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "Ref": "ReservedEniAZ2"
            }
          ]
        },
        "SubnetId": {
          "Fn::GetAtt": [
            "VpcInfo",
            "PrivateSubnetAZ2"
          ]
        },
        "Tags": [
          {
            "Key": "StackName",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Description",
            "Value": "ENI AZ2"
          },
          {
            "Key": "Subnet ID",
            "Value": { "Fn::GetAtt": [ "VpcInfo", "PrivateSubnetAZ2" ] }
          }
        ]
      }
    },
    "EniAZ3": {
      "Type": "AWS::EC2::NetworkInterface",
      "Properties": {
        "Description": "ENI for AZ3",
        "PrivateIpAddress": {
          "Fn::If": [
            "NotSet_ReservedEniAZ3",
            {
              "Ref": "AWS::NoValue"
            },
            {
              "Ref": "ReservedEniAZ3"
            }
          ]
        },
        "SubnetId": {
          "Fn::GetAtt": [
            "VpcInfo",
            "PrivateSubnetAZ3"
          ]
        },
        "Tags": [
          {
            "Key": "StackName",
            "Value": {
              "Ref": "AWS::StackName"
            }
          },
          {
            "Key": "Description",
            "Value": "ENI AZ3"
          },
          {
            "Key": "Subnet ID",
            "Value": { "Fn::GetAtt": [ "VpcInfo", "PrivateSubnetAZ3" ] }
          }
        ]
      }
    },
    "IamEniRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    },
    "IamEniAttachPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": { "Fn::Join": [ "-", [ { "Ref": "AWS::StackName" }, "attach", "policy" ] ] },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "CloudFormation:DescribeStackResource",
                "ec2:AssociateAddress",
                "ec2:AssignPrivateIpAddresses",
                "ec2:AttachNetworkInterface",
                "ec2:CreateNetworkInterface",
                "ec2:DescribeInstances",
                "ec2:DescribeNetworkInterfaces",
                "ec2:DescribeSecurityGroups",
                "ec2:DescribeSubnets",
                "ec2:DetachNetworkInterface"
              ],
              "Resource": [ "*" ]
            }
          ]
        },
        "Roles": [ { "Ref": "IamEniRole" } ]
      }
    }
  },
  "Outputs": {
    "EniAz1": {
      "Description": "ENI ID AZ1",
      "Value": {
        "Ref": "EniAZ1"
      }
    },
    "EniAz1Ip": {
      "Description": "ENI IP AZ1",
      "Value": {
        "Fn::GetAtt": [
          "EniAZ1",
          "PrimaryPrivateIpAddress"
        ]
      }
    },
    "EniAz2": {
      "Description": "ENI ID AZ2",
      "Value": {
        "Ref": "EniAZ2"
      }
    },
    "EniAz2Ip": {
      "Description": "ENI IP AZ3",
      "Value": {
        "Fn::GetAtt": [
          "EniAZ2",
          "PrimaryPrivateIpAddress"
        ]
      }
    },
    "EniAz3": {
      "Description": "ENI ID AZ3",
      "Value": {
        "Ref": "EniAZ3"
      }
    },
    "EniAz3Ip": {
      "Description": "ENI IP AZ3",
      "Value": {
        "Fn::GetAtt": [
          "EniAZ3",
          "PrimaryPrivateIpAddress"
        ]
      }
    }
  }
}
